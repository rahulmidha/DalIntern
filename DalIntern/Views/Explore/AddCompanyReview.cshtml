<div class="modal fade" id="companyModel" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Company Review</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("AddCompanyReview", "Explore", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <button class="btn btn-primary pull-right" onclick="getMap()">Submit</button>
                    <div class="form-group">
                        <input type="text" name="CompanyName" placeholder="Company Name" class="form-control" />
                    </div>
                    <div class="pull-right">
                        <select id="rating" name="rating">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="text" name="PositionName" placeholder="Position" class="form-control" />
                    </div>
                    <div>
                        <label for="CompanyImage" class="control-label">Company Image</label>
                        <input type="file" runat="server" class="form-control" name="CompanyImage" id="CompanyImage" accept="Images/*" multiple>
                    </div>
                    <br />
                    <div class="form-group">
                        <textarea class="form-control" style="resize:none;max-width:100%;width:100%; height:150px;" name="review" placeholder="Review"></textarea>
                    </div>

                    <div class="form-group">
                        <label>Current Location</label>
                        <input id="city" name="city" type="text" placeholder="Enter City" class="form-control" />
                    </div>

                }
            </div>
            <!--<div class="modal-footer">
        <div id="mapDiv">
            <img id="mapImage" style="width:100%;" />
        </div>
    </div>-->
        </div>

    </div>
</div>