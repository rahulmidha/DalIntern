@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DalIntern</title>
    <link rel='stylesheet' type="text/css" href="~/Content/grid.css">
    <link rel='stylesheet' type="text/css" href="~/Content/normalize.css">
    <link rel='stylesheet' type="text/css" href="~/Content/landing_style.css">
    <link rel='stylesheet' type="text/css" href="~/Content/landing_queries.css">
    <script src="~/Scripts/jquery-1.10.2.js" type="text/javascript"></script>
    <link href="https://fonts.googleapis.com/css?family=Lato:100,300,300i,400" rel="stylesheet">
</head>
<body>
    <header class="slide1" id="landingHeader">
        <div style="position:absolute;width:100%;height:100%;top:0;left:0;right:0;bottom:0;background-color:rgb(0,0,0,0.5);"></div>
        <nav style="position:relative;">
            <div class="row">
                <img src="~/Images/dal-logo-white.png" class="logo" alt="DalIntern-Logo">
                <ul class="main-nav">
                    @if (!Request.IsAuthenticated)
                    {
                    <li><a href="@Url.Action("About", "Home")">About Us</a></li>
                    <li><a href="@Url.Action("Login", "Account")" class="">SignIn</a></li>
                    <li><a href="@Url.Action("Register", "Account")" class="">SignUp</a></li>
                    }
                    else
                    {                        
                        <li>  @Html.ActionLink("Hey " + User.Identity.Name.Split('@')[0], "Index", "Profile", routeValues: null, htmlAttributes: new { title = "Profile" })</li>
                        <li><a href="@Url.Action("LogOff", "Account")" class="">SignOut</a></li>
                    }
                </ul>
            </div>
        </nav>
        
        <div class="text-box">
            <h1>Dal Intern</h1><br><h2>Rate, Review & Research Internships</h2>
            <a class="btn btn-ghost" href="@Url.Action("Login","Account")">Look at Internships!</a>
        </div>
    </header>



</body>
</html>